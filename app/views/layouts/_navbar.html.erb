<ul class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <div class="nav">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to "Snatch That!", authenticated_root_path, class: "navbar-brand", id: "home-button" %>

    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">

        <!-- login -->
        <ul class="nav navbar-nav pull-right">
         <% if user_signed_in? %>
           <li><%= link_to "Sign Out", destroy_user_session_path, id: 'sign-out-text', :method => :delete %></li>
           <li><%= link_to 'Settings', edit_user_registration_path, id: 'settings-text' %></li>
         <% else %>
          <li class="dropdown">
            <%= form_for(resource, :as => resource_name, :url => new_user_session_path, :html => { :class => 'navbar-form navbar-right' }) do |f| %>
                <%= f.text_field :login, :placeholder => 'Username', :class => "form-control" %>
                <%= f.password_field :password, :placeholder => 'Password', :class => "form-control" %>
                <%= f.submit 'Sign In', :class => 'btn btn-default' %>
            <% end %>
         <% end %>
        </ul>

    </div>

  </div>
  </div>
</ul>
