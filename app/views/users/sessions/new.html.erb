<div class="col-md-4">

  <h2>Sign In</h2><hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.text_field :login,  :placeholder => 'Username', class: "form-control", id: "inputDefault", style: "width: 250px;" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control", id: "inputDefault", style: "width: 250px;" %><br>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

  <div class="form-group">
    <div class="actions">
      <%= f.submit "Sign In", class: "btn btn-default" %>
      <%= render "users/shared/links" %>
    </div>

    <% end %>
  </div>

</div>
