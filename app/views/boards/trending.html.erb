<div class="col-xs-12">
  <center><h2>Trending</h2></center>
  <hr>
  <center>
  <div class="col-xs-3">
    <h3>Item With Most Likes:</h3>
    <div class="thumbnail" style="width:250px; height:250px;">
      <%= link_to @item.name, item_path(@item) %><br>
      <% if @item.image_url == "" %>
        <%= image_tag("new-item.png", size: "165x165") %>
      <% else %>
        <%= image_tag @item.image_url %>
      <% end %>
      <div class = 'caption'>
      <strong>Price: </strong>$<%= @item.prices.last.price %>.00<br>
      <%= @item.get_likes.size %> like(s)
      </div>
  </div>
  </div>
</center>
</div>
