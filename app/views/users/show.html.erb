<div class = "col-sm-3">
<h1><%=@user.username.capitalize%>'s Closets</h1>
<br><br>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<br><br>
<p>
<%= render 'follow_form' if !current_user.nil? %>
</p>

<br><br>
</div>
<div class = "col-sm-9">
  <center>
    <p>
    ----- CLOSETS -----
    </p>
    <br><br>
    <%@user.closets.each do |closet|%>
    <div class = "col-sm-4">
      <p><%=closet.name%></p>
      <br><br>
    </div>
    <%end%>
    
  </center>
</div>